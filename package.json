{
  "name": "yandex-search-extension",
  "version": "1.0.0",
  "description": "Расширение для расширенного поиска через Яндекс",
  "scripts": {
    "build": "mkdir -p dist && zip -r dist/extension.zip . -x \"*.git*\" \"*.github*\" \"*.vscode*\" \"node_modules/*\" \"dist/*\" \".eslintrc*\" \"*.md\" \"*.yaml\" \"*.yml\"",
    "version:patch": "npm version patch && git push --follow-tags",
    "version:minor": "npm version minor && git push --follow-tags",
    "version:major": "npm version major && git push --follow-tags"
  },
  "keywords": [
    "chrome-extension",
    "yandex",
    "search",
    "browser-extension"
  ],
  "author": "nnostrovskiy",
  "license": "MIT"
}